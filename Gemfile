source :rubygems

group :runtime do
  gem 'rails', '3.0.1'
  gem 'pg'
  gem 'sinatra'
  gem 'json'
  gem "logging"
  gem "patron"
  gem 'heroku'
  gem "nokogiri"
  gem 'warden'
  gem 'less'
  gem 'chunky_png'
  gem 'mail'
  gem 'pony'
  gem 'bcrypt-ruby', :require => "bcrypt"
  gem 'extlib'
end

group :test do
  gem 'rake'
  gem 'bundler'
  gem 'rspec'        
  gem 'rcov'
  gem 'bcrypt-ruby', :require => 'bcrypt'
  gem 'sqlite3-ruby', :require => 'sqlite3'
  gem 'json'
  gem "logging"
  gem "patron"
  gem "nokogiri"
  gem 'ffaker'
  gem 'fabrication'
end

