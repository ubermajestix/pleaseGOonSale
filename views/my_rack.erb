<h2><%= @items.length %> items</h2>
<table>
<% @items.each do |item| %>
<tr><td colspan=100><h1>Item <%= item.on_sale? ? 'is' : 'is not'  %> on sale<%='!!!' if item.on_sale? %></h1></td></tr>
  <tr>
    <td colspan=100><img src="<%= item.image_url %>"></td>
  </tr>
  <tr style="border-bottom:2px solid #aaa; margin-bottom:10px">  
    <td><%= item.name %></td>
    <td><%= item.formatted_price %></td>
    <td><a href="<%= item.store_url %>">view</a></td>
    <td>in <%#= item.colors.length %> colors: 
      <%# item.colors.each do |color| %>
        <span style="background:<%#= color.hex %>;height:10px; width:10px; margin:5px; padding:3px;"><%#= color.name  %></span>
      <%# end %>
    </td>
    <td><%= item.sku %></td>
  </tr>
<% end %>
</table>